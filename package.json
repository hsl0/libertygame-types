	},
	"homepage": "https://github.com/LibertygameWikiKorea/libertygame-types#readme",
	"dependencies": {
		"types-mediawiki": "^1.8.0"
	},
	"devDependencies": {
		"husky": "^9.1.7",
		"markdownlint-cli": "^0.44.0",
		"prettier": "^3.3.2",
		"typescript": "^5.4.5"
	}
}
