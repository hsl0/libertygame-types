	"description": "리버티게임(libertyga.me) 스크립트 타입 정의",
	"types": "index.d.ts",
	"scripts": {
		"test": "npm run lint",
		"lint": "npm run tsc-lint && npm run prettier-check && npm run markdownlint",
		"tsc-lint": "tsc --noEmit",
		"format": "npm run prettier-write & npm run markdownlint-fix",
		"prettier-check": "prettier -c .",
		"prettier-write": "prettier -w .",
		"markdownlint": "markdownlint **/*.md",
		"markdownlint-fix": "npm run markdownlint -- --fix",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
